{
  "compilerOptions": {
    "outDir": "dist",   // <-- This ensures compiled files go to "dist/"
    "rootDir": "src",   // <-- Ensures TS compiles from "src/"
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.ts"]
}